{
  "name": "streaming",
  "version": "1.0.0",
  "author": "Ziphil",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "develop": "run-p develop:client develop:server:webpack develop:server:nodemon",
    "develop:client": "webpack-dev-server --mode development --devtool inline-source-map --config webpack-client.ts --hot",
    "develop:server:webpack": "webpack --mode development --config webpack-server.ts --watch",
    "develop:server:nodemon": "nodemon --inspect -L dist/index.js",
    "build": "run-s build:client build:server",
    "build:client": "webpack --mode production --config webpack-client.ts",
    "build:server": "webpack --mode production --config webpack-server.ts",
    "start": "node dist/index.js",
    "lint": "eslint client/**/*.ts client/**/*.tsx server/**/*.ts",
    "lint:fix": "eslint --fix client/**/*.ts client/**/*.tsx server/**/*.ts"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack-*.ts"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "ext": "js",
    "ignore": [
      "dist/client/**"
    ]
  },
  "dependencies": {
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "discord.js": "^13.0.0-dev.e0efcc6ab0e3f060e30438c0d990c9465c6134df",
    "express": "^4.17.1",
    "js-base64": "^3.6.0",
    "nanoid": "^3.1.18",
    "query-string": "^8.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reflect-metadata": "^0.1.13",
    "sass": "^1.59.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/html-webpack-plugin": "^3.2.4",
    "@types/nanoid": "^2.1.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-loader": "^8.2.1",
    "babel-polyfill": "^6.26.0",
    "css-loader": "^5.0.1",
    "eslint": "^8.17.0",
    "eslint-config-ziphil": "^1.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^4.0.4",
    "sass-loader": "^10.1.0",
    "source-map-loader": "^1.1.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-node-externals": "^3.0.0"
  }
}
